---
pagination:
    data: modules
    size: 1
    alias: module
permalink: "/feed/{{ module.feedId | slug }}/module/{{ module.id | slug }}/"
layout: base.njk
eleventyComputed:
  title: "{{ module.name }}"
  description: "{{ module.description }}"
  author: "{{ module.author }}"
---

<p>{{ module.description }}</p>
<p>Module <a href="{{ module.url }}">{{ module.id }}</a> in feed <a href="/feed/{{ module.feedId | slug }}">{{ module.feedId }}</a> by {{ module.author }}.</p>

<h3>Channels:</h3>
{% for channel, info in module.channels %}
<h4>{{ channel }}:</h4>
<p>Version: {{ info.description }}</p>
<p>Release Date: {{ info.released }}</p>
<p>Default: {{ info.default }}</p>

<details open>
  <summary>Required Modules</summary>
  <p>
    {% for module in info.requiredModules %}
      <li>
        {% if module.feed %}
          <a href="/feed/{{ module.feedId }}/module/{{ module.moduleName | slug }}">{{ module.moduleName }}</a>
        {% else %}
          {{ module.moduleName }}
        {% endif %}
        {% if module.version %} @ {{ module.version }}{% endif %}
      </li>
    {% else %}
      No modules required
    {% endfor %}
  </p>
</details>
<details>
  <summary>Files</summary>
  <p>
    {% for file in info.files %}
      <li><a href="{{ file.url }}">{{ file.name }}</a>: <code>{{ file.sha1 }}</code></li>
    {% else %}
      Module containes no files
    {% endfor %}
  </p>
</details>
{% endfor %}

<details>
  <summary>Changelog</summary>
  <p>
    {% for version, changelog in module.changelog | changelogSort %}
      <p><b>{{ version }}:</b> <br>
      {% for changelogLine in changelog %}
        <li>{{ changelogLine | markdownify | safe }}</li>
      {% endfor %}
      </p>
    {% else %}
      No changelog Available
    {% endfor %}
  </p>
</details>