---
pagination:
    data: macros
    size: 1
    alias: macro
permalink: "/feed/{{ macro.feedId | slug }}/macro/{{ macro.id | slug }}/"
layout: base.njk
eleventyComputed:
  title: "{{ macro.name }}"
  description: "{{ macro.description }}"
  author: "{{ macro.author }}"
---

<p>ID: {{ macro.id }}</p>
<p>In Feed: {{ macro.feedId }}</p>
<p>By: {{ macro.author }}</p>
<p>{{ macro.description }}</p>

<h3>Channels:</h3>
{% for channel, info in macro.channels %}
<h4>{{ channel }}:</h4>
<p>Version: {{ info.description }}</p>
<p>Release Date: {{ info.released }}</p>
<p>Default: {{ info.default }}</p>
<details>
  <summary>Files</summary>
  <p>
    {% for file in info.files %}
      <li><a href="{{ file.url }}">{{ file.name }}</a>: {{ file.sha1 }}</li>
    {% endfor %}
  </p>
</details>
<details>
  <summary>Required Modules</summary>
  <p>
    {% for module in info.requiredModules %}
      <li><a href="{{ module.feed }}/macro/{{ module.moduleName | slug }}">{{ module.moduleName }}</a> @ {{ module.version }}</li>
    {% endfor %}
  </p>
</details>
{% endfor %}

<details>
  <summary>Changelog</summary>
  <p>
    {% for version, changelog in macro.changelog %}
      <p><b>{{ version }}:</b> <br>
      {% for changelogLine in changelog %}
        <li>{{ changelogLine | markdownify | safe }}</li>
      {% endfor %}
      </p>
    {% else %}
      No changelog Available
    {% endfor %}
  </p>
</details>